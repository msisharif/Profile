<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.imrankhan.myloginsignup">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/login"
        android:label="@string/app_name"
        android:roundIcon="@drawable/login"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
                  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".SignUpActivity"
                  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".profileActivity"
                  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".updateInfoActivity"
                  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".accountSettings"
                  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".changeProfilePicActivity"
                  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".changePasswordActivity"
                  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".StartingSplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".welcomeProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".About"
                  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".feedBackActivity"
                  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".security_Q_A_Activity"
                  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".resetPasswordForForgotPassword"
                  android:windowSoftInputMode="stateAlwaysHidden"/>
    </application>

</manifest>