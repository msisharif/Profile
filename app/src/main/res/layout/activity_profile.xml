<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0097a7"
    android:padding="10dp"
    tools:context="com.example.imrankhan.myloginsignup.profileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/round_corner_shape">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/frame"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="35dp">

                <ImageView
                    android:id="@+id/profile_pic_id"
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:src="@drawable/man"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/full_name_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MD. Shariful Islam"
                    android:layout_marginTop="15sp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textIsSelectable="true"
                    android:layout_marginLeft="2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/email"
                        android:layout_marginRight="1dp"/>

                    <TextView
                        android:id="@+id/email_view_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="msicseewu@gamil.com"
                        android:textSize="13dp"
                        android:textIsSelectable="true"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#0b6999"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp">

                    <ImageButton
                        android:id="@+id/update_info_button_id"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/update_info_edit"
                        android:layout_marginRight="7dp"
                        android:background="@android:color/transparent"/>

                    <ImageButton
                        android:id="@+id/account_button_id"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/account_settings_icon"
                        android:onClick="onClick"
                        android:background="@android:color/transparent"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_corner_shape">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/user_details"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PERSONAL INFO : "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textIsSelectable="true"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/user_name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username :  "
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginRight="3dp"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/username_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="msisharif"
                    android:textSize="13dp"
                    android:textIsSelectable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dob"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D.O.B :  "
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginRight="3dp"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/dob_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30/12/1992"
                    android:textSize="13dp"
                    android:textIsSelectable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/gender"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender :  "
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginRight="3dp"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/gender_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="male"
                    android:textSize="13dp"
                    android:textIsSelectable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/contact_no"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact No :  "
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginRight="3dp"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/contact_no_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="13dp"
                    android:textIsSelectable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/address"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address :  "
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginRight="3dp"
                    android:textIsSelectable="true"
                    />

                <TextView
                    android:id="@+id/address_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="13dp"
                    android:textIsSelectable="true"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/national_id"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="National ID :  "
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginRight="3dp"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/national_id_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="13dp"
                    android:textIsSelectable="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/credit_card"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit Card :  "
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginRight="3dp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/credit_card_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="13dp"
                    android:textIsSelectable="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/bank_account"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank Account :  "
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginRight="3dp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/bank_account_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="13dp"
                    android:textIsSelectable="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/driving_licence"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driving Licence :  "
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginRight="3dp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/driving_licence_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="13dp"
                    android:textIsSelectable="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/favourite_quotes"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Notes :  "
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginRight="3dp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/favourite_quotes_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="13dp"
                    android:textIsSelectable="true"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</ScrollView>
