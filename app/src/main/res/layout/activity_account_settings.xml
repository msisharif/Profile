<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0097a7"
    android:padding="10dp"
    tools:context="com.example.imrankhan.myloginsignup.accountSettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner_shape">

            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/account_settings_title"/>

            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ACCOUNT SETTINGS"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#d4782663"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:background="@drawable/round_corner_shape">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="27dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/change_profile_pic_id"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/change_profile_pic"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:text="Change Profile Pic"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/change_password_id"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/change_password"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:text="Change Password"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="27dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/delete_account_id"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/delete_account"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:text="Delete Account"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/logout_id"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/logout"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:text="Logout"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</ScrollView>
