<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e20097a7"
    android:padding="40dp"
    tools:context="com.example.imrankhan.myloginsignup.MainActivity">

    <!-- image asset custom color #D81B60 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/login"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/user_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username."
            android:drawableLeft="@drawable/user_name"
            android:textColor="#262121"
            android:textSize="13sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/password_id"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password."
            android:drawableLeft="@drawable/password"
            android:textColor="#262121"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <Button
                android:id="@+id/login_id"
                android:text="Log In"
                android:textAllCaps="false"
                android:textColor="#e016cbd1"
                android:layout_marginRight="20dp"
                android:textSize="12sp"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/button_shape"
                android:shadowColor="#A8A8A8"
                android:textStyle="bold"
                android:shadowRadius="3"
                />

            <Button
                android:id="@+id/signUp_id"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="#e016cbd1"
                android:textSize="12sp"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/button_shape"
                android:shadowColor="#A8A8A8"
                android:textStyle="bold"
                android:shadowRadius="3"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/attempt_id"
            android:text="@string/forgot_password"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:linksClickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>


</ScrollView>
